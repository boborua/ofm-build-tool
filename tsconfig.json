{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "./",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "components/*": ["src/components/*"],
            "react-highchart/*": ["src/package/react-highchart/*"],
            "sie-util/*": ["src/package/sie-util/*"],
            "antd-modify/*": ["src/package/antd-modify/*"],
            "sie-design": ["src/package/sie-design/src/index"]
        },
        "experimentalDecorators": true,
        "noUnusedParameters": true
    },
    "exclude": [
        "node_modules",
        "scripts",
        "config",
        "bin",
    ]
}